<script>

/// tooltips

(function($){
    $(document).ready(function(){
    $("[title]").style_my_tooltips({
    tip_follows_cursor:true,
    tip_delay_time:200,
    tip_fade_speed:200
      });
    });
})(jQuery);

/// photosets

$(document).ready(function(){
   $('.photo-slideshow').pxuPhotoset({
       lightbox: true,
       rounded: false,
       gutter: '2px',
       borderRadius: '0px',
       photoset: '.photo-slideshow',
       photoWrap: '.photo-data',
       photo: '.pxu-photo'
   });
});

/// dropdown

$(document).ready(function(){
    $(".dropdown").hide();
    $(".dropbutton").show();$('.dropbutton').toggle(function(){
    $(".dropdown").slideDown(function(){});
    },function(){
    $(".dropdown").slideUp(function(){});
    });
});

/// scroll to top

$(document).ready(function(){
    $('#btop').click(function(){
        $('html, body').animate({scrollTop : 0},800);
        return false;
    });

});

/// notecount 

$('article').find('.notecount').each(function(){
       var n = $(this).html().split(' ')[0].replace(/,/g, '');
       if (n > 999) {
           n = Math.floor(n / 100) / 10;
           $(this).text(n + 'k notes');
       }
   });

/// video resizing

function flexFrame() {
   $(".caption").each(function() {
        $(this).find("iframe").wrap("<div class='capframe'></div>");
        flexibleFrames($(".capframe"));
    });
    flexibleFrames($(".video"));
}
$(document).ready(flexFrame);

/// remove tumblr redirects script by magnusthemes@tumblr

$(document).ready(function(){
  $('a[href*="t.umblr.com/redirect"]').each(function(){
      var originalURL = $(this).attr("href").split("?z=")[1].split("&t=")[0];
      var replaceURL = decodeURIComponent(originalURL);
      $(this).attr("href", replaceURL);
  });
});
    
feather.replace()

</script>


